{
  "name": "@foobar-agency/react-global-state",
  "version": "0.0.0-semantically-released",
  "description": "A simple yet powerful library for managing global states with react",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/esm/index.d.ts",
      "module": "./lib/esm/index.js",
      "import": "./lib/cjs/index.js",
      "default": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "react",
    "state",
    "hooks",
    "stateless",
    "global"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foobaragency/react-global-state.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "clean": "rm -rf lib",
    "fix": "yarn lint:prettier --write && yarn lint --fix",
    "generate:apidocs": "bash scripts/generate-api-docs.sh",
    "lint": "eslint --ext .ts --cache src",
    "lint:prettier": "prettier \"**/*.{js,ts,json,md,yml}\"",
    "semantic-release": "semantic-release",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "safe-stable-stringify": "^2.3.1"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-jest": "^27.4.6",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^27.4.7",
    "jest-localstorage-mock": "^2.4.18",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "safe-stable-stringify": "^2.3.1",
    "semantic-release": "^19.0.2",
    "typedoc": "^0.22.11",
    "typedoc-plugin-markdown": "^3.11.11",
    "typescript": "^4.5.5"
  }
}
