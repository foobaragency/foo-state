{
  "name": "@foobar-agency/react-global-state",
  "version": "1.0.2",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/esm/index.d.ts",
      "module": "./lib/esm/index.js",
      "import": "./lib/cjs/index.js",
      "default": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "react",
    "state",
    "hooks",
    "stateless",
    "global"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foobaragency/react-global-state.git"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "clean": "rm -rf lib",
    "fix": "yarn lint:prettier --write && yarn lint --fix",
    "generate:apidocs": "bash scripts/generate-api-docs.sh",
    "lint": "eslint --ext .ts --cache src",
    "lint:prettier": "prettier \"**/*.{js,ts,json,md,yml}\""
  },
  "dependencies": {
    "safe-stable-stringify": "^2.3.1"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "safe-stable-stringify": "^2.3.1",
    "typedoc": "^0.22.10",
    "typedoc-plugin-markdown": "^3.11.11",
    "typescript": "^4.5.4"
  }
}
